<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EsmFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:columnCount="4"
    app:rowCount="5"
    android:background="@color/alice_blue">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnSpan="2"
        app:layout_rowSpan="2"
        android:text="Торги по ЕГП"
        android:textSize="@dimen/big_default_text"
        android:textColor="@color/dark_red"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="2"
        app:layout_row="0"
        android:paddingStart="20dp"
        android:text="Цена max"/>

    <TextView
        android:id="@+id/egpPriceTextView"
        app:layout_column="3"
        app:layout_row="0"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="2"
        app:layout_row="1"
        app:layout_gravity="center"
        android:paddingStart="20dp"
        android:text="Количество"/>

    <TextView
        android:id="@+id/egpQtyTextView"
        app:layout_column="3"
        app:layout_row="1"
        app:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_column="0"
        app:layout_row="2"
        android:text="Количество"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/egpQtyEditText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_gravity="end"
        app:layout_column="2"
        app:layout_row="2"
        app:layout_columnSpan="2"
        android:ems="5"
        android:maxEms="5"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:text="0"
        android:selectAllOnFocus="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_column="0"
        app:layout_row="3"
        android:text="Цена"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/egpPriceEditText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_gravity="end"
        app:layout_column="2"
        app:layout_row="3"
        app:layout_columnSpan="2"
        android:ems="5"
        android:maxEms="5"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:text="0"
        android:selectAllOnFocus="true"/>

    <Button
        android:id="@+id/egpSendRequestBtn"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_column="0"
        app:layout_row="4"
        app:layout_columnSpan="4"
        android:text="Отправить заявку"
        android:background="@color/white"
        android:textColor="@color/dark_red"/>

</android.support.v7.widget.GridLayout>