<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CompetitorFragment"
    app:columnCount="2"
    app:rowCount="5">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:text="ЕСМ"
        app:layout_column="0"
        app:layout_row="0"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/competitorEsmTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_marginStart="20dp"
        app:layout_column="1"
        app:layout_row="0"
        android:text="0"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:text="ЕГП"
        app:layout_column="0"
        app:layout_row="1"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/competitorEgpTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_marginStart="20dp"
        app:layout_column="1"
        app:layout_row="1"
        android:text="0"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:text="Фабрики"
        app:layout_column="0"
        app:layout_row="2"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/competitorFabrics1TextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_marginStart="20dp"
        app:layout_column="1"
        app:layout_row="2"
        android:text="0"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:text="Авто. фабрики"
        app:layout_column="0"
        app:layout_row="3"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/competitorFabrics2TextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_marginStart="20dp"
        app:layout_column="1"
        app:layout_row="3"
        android:text="0"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:text="Капитал"
        app:layout_column="0"
        app:layout_row="4"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/competitorMoneyTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_marginStart="20dp"
        app:layout_column="1"
        app:layout_row="4"
        android:text="0"/>


</android.support.v7.widget.GridLayout>