<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/lib/com.package.class"
    app:columnCount="3"
    app:rowCount="6">

    <View
        app:layout_row="0"
        app:layout_columnSpan="3"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/gameNameTextView"
        app:layout_row="1"
        app:layout_column="0"
        app:layout_rowSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="5dp"
        android:textSize="@dimen/text_default_size"
        app:layout_gravity="fill"
        android:textColor="@color/dark_red"/>

    <TextView
        android:id="@+id/playersTextView"
        app:layout_row="3"
        app:layout_column="0"
        app:layout_rowSpan="3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_margin="3dp"
        android:lines="2"
        android:maxLines="2"
        android:textSize="@dimen/text_default_size"
        app:layout_gravity="bottom"
        android:textColor="@color/dark_red"/>

    <TextView
        app:layout_row="1"
        app:layout_column="1"
        app:layout_columnWeight="0.5"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:textColor="@color/dark_red"
        android:text="ЕСМ"/>

    <TextView
        app:layout_row="2"
        app:layout_column="1"
        app:layout_columnWeight="0.5"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:textColor="@color/dark_red"
        android:text="ЕГП"/>

    <TextView
        app:layout_row="3"
        app:layout_column="1"
        app:layout_columnWeight="0.5"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:textColor="@color/dark_red"
        android:text="Фабрики"/>

    <TextView
        app:layout_row="4"
        app:layout_column="1"
        app:layout_columnWeight="0.5"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:textColor="@color/dark_red"
        android:text="Автоматизированные фабрики"/>

    <TextView
        app:layout_row="5"
        app:layout_column="1"
        app:layout_columnWeight="0.5"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:textColor="@color/dark_red"
        android:text="Капитал"/>

    <TextView
        android:id="@+id/startEsmTextView"
        app:layout_row="1"
        app:layout_column="2"
        app:layout_columnWeight="0.25"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:textColor="@color/dark_red"/>

    <TextView
        android:id="@+id/startEgpTextView"
        app:layout_row="2"
        app:layout_column="2"
        app:layout_columnWeight="0.25"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:textColor="@color/dark_red"/>

    <TextView
        android:id="@+id/startFabrics1TextView"
        app:layout_row="3"
        app:layout_column="2"
        app:layout_columnWeight="0.25"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:textColor="@color/dark_red"/>

    <TextView
        android:id="@+id/startFabrics2TextView"
        app:layout_row="4"
        app:layout_column="2"
        app:layout_columnWeight="0.25"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:textColor="@color/dark_red"/>

    <TextView
        android:id="@+id/startMoneyTextView"
        app:layout_row="5"
        app:layout_column="2"
        app:layout_columnWeight="0.25"
        app:layout_rowWeight="1"
        app:layout_gravity="fill"
        android:textColor="@color/dark_red"/>

</android.support.v7.widget.GridLayout>