<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".CreditFragment"
    app:rowCount="3"
    app:columnCount="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/big_default_text"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnSpan="2"
        android:text="Получение ссуды"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        app:layout_column="0"
        app:layout_row="1"
        android:text="Размер ссуды"/>

    <EditText
        android:id="@+id/creditAmountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="1"
        app:layout_row="1"
        android:ems="6"
        android:maxEms="6"
        app:layout_gravity="end"
        android:selectAllOnFocus="true"
        android:text="0"/>

    <Button
        android:id="@+id/takeCreditBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/dark_red"
        app:layout_column="0"
        app:layout_row="2"
        app:layout_columnSpan="2"
        android:text="Взять ссуду"/>

</android.support.v7.widget.GridLayout>