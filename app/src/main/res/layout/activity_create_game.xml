<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rowCount="8"
    app:columnCount="2"
    tools:context=".CreateGameActivity"
    android:background="@color/alice_blue">

    <TextView
        android:layout_marginTop="10dp"
        android:text="Имя Игры"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="0" />

    <EditText
        android:id="@+id/gameNameEditText"
        android:layout_marginTop="10dp"
        android:ems="10"
        app:layout_column="1"
        app:layout_row="0" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_num"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="1" />

    <Spinner
        android:id="@+id/numOfPlayers"
        android:layout_marginTop="10dp"
        app:layout_column="1"
        app:layout_row="1" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_cap"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="2" />

    <EditText
        android:id="@+id/editText4"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        app:layout_column="1"
        app:layout_row="2" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_fact"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="3" />

    <Spinner
        android:id="@+id/numOfFact"
        android:layout_marginTop="10dp"
        app:layout_column="1"
        app:layout_row="3" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_auto_fact"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="4" />

    <Spinner
        android:id="@+id/numOfFactA"
        android:layout_marginTop="10dp"
        app:layout_column="1"
        app:layout_row="4" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_ESM"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="5" />

    <Spinner
        android:id="@+id/numOfESM"
        android:layout_marginTop="10dp"
        app:layout_column="1"
        app:layout_row="5" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_EGP"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="6"
        android:textColor="@color/dark_red" />

    <Spinner
        android:id="@+id/numOfEGP"
        android:layout_marginTop="10dp"
        app:layout_column="1"
        app:layout_row="6" />

    <Button
        android:id="@+id/button"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:onClick="createGameOnClick"
        android:text="Создать игру"
        android:textColor="@color/dark_red"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_row="7" />

</android.support.v7.widget.GridLayout>