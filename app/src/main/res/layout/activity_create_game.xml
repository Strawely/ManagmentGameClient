<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rowCount="9"
    app:columnCount="2"
    tools:context=".CreateGameActivity"
    android:background="@color/alice_blue">

    <android.support.v7.widget.Toolbar
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_default_size"
            android:text="Создать игру"/>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_marginTop="10dp"
        android:text="Имя Игры"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="1" />

    <EditText
        android:id="@+id/gameNameEditText"
        android:layout_marginTop="10dp"
        android:ems="10"
        app:layout_column="1"
        app:layout_row="1" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_num"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="2" />

    <Spinner
        android:id="@+id/playersSpinner"
        android:layout_marginTop="10dp"
        app:layout_column="1"
        app:layout_row="2" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_cap"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="3" />

    <EditText
        android:id="@+id/moneyEditText"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        app:layout_column="1"
        app:layout_row="3"
        android:text="10000"
        android:selectAllOnFocus="true"/>

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_fact"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="4" />

    <Spinner
        android:id="@+id/fabrics1Spinner"
        android:layout_marginTop="10dp"
        app:layout_column="1"
        app:layout_row="4" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_auto_fact"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="5" />

    <Spinner
        android:id="@+id/fabrics2Spinner"
        android:layout_marginTop="10dp"
        app:layout_column="1"
        app:layout_row="5" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_ESM"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="6" />

    <Spinner
        android:id="@+id/esmSpinner"
        android:layout_marginTop="10dp"
        app:layout_column="1"
        app:layout_row="6" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/players_EGP"
        android:textSize="18sp"
        app:layout_column="0"
        app:layout_row="7"
        android:textColor="@color/dark_red" />

    <Spinner
        android:id="@+id/egpSpinner"
        android:layout_marginTop="10dp"
        app:layout_column="1"
        app:layout_row="7" />

    <Button
        android:id="@+id/button"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:onClick="createGameOnClick"
        android:text="Создать игру"
        android:textColor="@color/dark_red"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_row="8" />

</android.support.v7.widget.GridLayout>