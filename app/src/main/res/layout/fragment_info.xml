<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_row="0"
        app:layout_columnSpan="2"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/big_default_text"
        android:text="Информация об игроке"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:text="ЕСМ"
        app:layout_column="0"
        app:layout_row="1"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/playerEsmTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_marginStart="20dp"
        app:layout_column="1"
        app:layout_row="1"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:text="ЕГП"
        app:layout_column="0"
        app:layout_row="2"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/playerEgpTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_marginStart="20dp"
        app:layout_column="1"
        app:layout_row="2"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:text="Фабрики"
        app:layout_column="0"
        app:layout_row="3"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/playerFabrics1TextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_marginStart="20dp"
        app:layout_column="1"
        app:layout_row="3"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:text="Авто. фабрики"
        app:layout_column="0"
        app:layout_row="4"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/playerFabrics2TextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_marginStart="20dp"
        app:layout_column="1"
        app:layout_row="4"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:text="Капитал"
        app:layout_column="0"
        app:layout_row="5"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/playerMoneyTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/text_default_size"
        android:layout_marginStart="20dp"
        app:layout_column="1"
        app:layout_row="5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"
        app:layout_column="0"
        app:layout_row="6"
        app:layout_columnSpan="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_row="6"
        app:layout_columnSpan="2"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/big_default_text"
        android:text="Другие игроки"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/dark_red"
        android:text="Игрок 1"
        app:layout_column="0"
        app:layout_row="7"
        app:layout_columnSpan="2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/dark_red"
        android:text="Игрок 2"
        app:layout_column="0"
        app:layout_row="8"
        app:layout_columnSpan="2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/dark_red"
        android:text="Игрок 3"
        app:layout_column="0"
        app:layout_row="9"
        app:layout_columnSpan="2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/dark_red"
        android:text="Игрок 4"
        app:layout_column="0"
        app:layout_row="10"
        app:layout_columnSpan="2"/>

</android.support.v7.widget.GridLayout>